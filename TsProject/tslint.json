{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "*.d.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "semicolon": false,
        "no-conditional-assignment": true,
        "class-name": true,
        "max-classes-per-file": false,
        "no-namespace": true,
        "encoding": true,
        "no-empty": [
            true,
            "allow-empty-functions"
        ],
        "new-parens": false,
        "jsdoc-format": false,
        "typedef-whitespace": true,
        "no-console": false,
        "triple-equals": false,
        "only-arrow-functions": false,
        "indent": [
            true,
            "spaces"
        ],
        "object-literal-shorthand": false,
        "space-before-function-paren": false,
        "no-trailing-whitespace": true,
        "whitespace": true,
        "variable-name": [
            true,
            "allow-leading-underscore",
            "allow-snake-case",
            "allow-pascal-case"
        ],
        "prefer-for-of": false,
        "prefer-const": false,
        "no-default-export": true,
        "no-bitwise": false
    },
    "rulesDirectory": []
}